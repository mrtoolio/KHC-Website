---
// CC's Note: V3 - Services architected to match brand reality.
import Layout from '../layouts/Layout.astro';
---

<Layout>
    <main>
        <!-- Home/Hero Section -->
        <section id="home" class="hero-section">
            <div class="hero-content container animate-on-scroll fade-in">
                <h1 class="hero-title">Pristine Spaces, Professional Care.</h1>
                <p class="hero-subtitle">Your one-stop shop for a cleaner, healthier, and more valuable property. We give you the precious gift of time.</p>
                <div class="hero-cta">
                    <a href="#contact" class="btn btn-primary">Get a Free Quote</a>
                    <a href="#services" class="btn btn-secondary">Explore Services</a>
                </div>
            </div>
        </section>

        <!-- Trust Badges Section -->
        <section id="trust-badges" class="trust-section">
            <div class="container">
                <h2 class="section-title-subtle animate-on-scroll fade-in-up">KHC GLOBAL SERVICES YOU CAN TRUST</h2>
                <div class="trust-grid">
                    <div class="trust-item animate-on-scroll fade-in-up" style="animation-delay: 0.1s;">
                        <i class="fas fa-check-circle"></i><span>Locally Owned</span>
                    </div>
                    <div class="trust-item animate-on-scroll fade-in-up" style="animation-delay: 0.2s;">
                        <i class="fas fa-check-circle"></i><span>Fully Insured</span>
                    </div>
                    <div class="trust-item animate-on-scroll fade-in-up" style="animation-delay: 0.3s;">
                        <i class="fas fa-check-circle"></i><span>Supplies Provided</span>
                    </div>
                    <div class="trust-item animate-on-scroll fade-in-up" style="animation-delay: 0.4s;">
                        <i class="fas fa-check-circle"></i><span>Trusted & Experienced</span>
                    </div>
                </div>
            </div>
        </section>

        <!-- UPDATED & RE-ARCHITECTED: Services Section -->
        <section id="services" class="services-section">
            <div class="container">
                <h2 class="section-title animate-on-scroll fade-in-up">Services We Offer</h2>
                <p class="section-subtitle animate-on-scroll fade-in-up">Get the Deep Clean Your Home Needs with The Cleaning Authority</p>
                <div class="services-grid-final">
                    <!-- Service Card 1 -->
                    <div class="service-card-final animate-on-scroll fade-in-up">
                        <div class="service-icon-final"><i class="fas fa-house-user"></i></div>
                        <h3 class="service-title-final">House Cleaning & Sanitizing</h3>
                        <p class="service-description-final">Our unique Detail-Clean Rotation System ensures that your home is cleaned to the highest standard.</p>
                    </div>
                    <!-- Service Card 2 -->
                    <div class="service-card-final animate-on-scroll fade-in-up" style="animation-delay: 0.2s;">
                        <div class="service-icon-final"><i class="fas fa-building"></i></div>
                        <h3 class="service-title-final">Apartment Cleaning & Sanitizing</h3>
                        <p class="service-description-final">Our thorough apartment cleaning services never miss the little details in your space!</p>
                    </div>
                    <!-- Service Card 3 -->
                    <div class="service-card-final animate-on-scroll fade-in-up" style="animation-delay: 0.4s;">
                        <div class="service-icon-final"><i class="fas fa-truck-moving"></i></div>
                        <h3 class="service-title-final">Move In / Move Out Cleaning</h3>
                        <p class="service-description-final">Moving can be messy but our cleaning professionals ensure a spotless clean.</p>
                    </div>
                    <!-- Service Card 4 -->
                    <div class="service-card-final animate-on-scroll fade-in-up" style="animation-delay: 0.6s;">
                        <div class="service-icon-final"><i class="fas fa-spray-can-sparkles"></i></div>
                        <h3 class="service-title-final">One-Time Cleaning Services</h3>
                        <p class="service-description-final">We proudly offer customizable one-time cleaning programs to suit your needs.</p>
                    </div>
                </div>
            </div>
        </section>
        
        <!-- Wow Factor: Before & After Slider -->
        <section id="wow-factor" class="wow-section">
            <div class="container animate-on-scroll fade-in">
                <h2 class="section-title">The KHC Difference, Visualized.</h2>
                <div class="comparison-slider">
                    <div class="comparison-image before-image">
                        <img src="https://images.unsplash.com/photo-1616484173744-4a8a25d11e74?q=80&w=2070&auto=format&fit=crop" alt="Dirty kitchen before cleaning">
                        <p class="image-label">Before</p>
                    </div>
                    <div class="comparison-image after-image">
                        <img src="https://images.unsplash.com/photo-1600585152225-3579fe9d7ae2?q=80&w=2070&auto=format&fit=crop" alt="Pristine kitchen after cleaning">
                        <p class="image-label">After</p>
                    </div>
                    <input type="range" min="0" max="100" value="50" class="slider" aria-label="Compare before and after images">
                    <div class="slider-line"></div>
                    <div class="slider-button" aria-hidden="true"><i class="fas fa-arrows-left-right"></i></div>
                </div>
            </div>
        </section>

        <!-- About Us Section -->
        <section id="about" class="about-section">
            <div class="container about-content">
                <div class="about-text animate-on-scroll fade-in-up">
                    <h2 class="section-title">Trustworthy, Efficient, Meticulous</h2>
                    <p>Founded on the principle of delivering excellence, KHC Global Services has grown to become a leading name in Nigeria’s maintenance industry. Our team is our greatest asset—fully trained, insured, and passionate about creating clean, healthy, and safe environments.</p>
                    <p>We combine modern technology with a meticulous work ethic to deliver results that don't just meet expectations, but exceed them. We are your dedicated partner in property care.</p>
                </div>
                <!-- Image Carousel -->
                <div class="about-image-carousel animate-on-scroll fade-in-up" style="animation-delay: 0.2s;">
                    <div class="carousel-track">
                        <img src="https://media.istockphoto.com/id/1347511516/photo/portrait-of-a-confident-young-african-american-woman-working-in-a-cleaning-company.jpg?s=612x612&w=0&k=20&c=6QK45w2uDA7H2q5Dpqh-q2o0Fw_1ka20sLxg523mJZA=" alt="Professional Black female cleaner smiling">
                        <img src="https://media.istockphoto.com/id/1364539327/photo/portrait-of-a-group-of-diverse-cleaners-standing-together-in-an-office-and-looking-at-the.jpg?s=612x612&w=0&k=20&c=cTUBNvHy1kHjS5L9oKqBxsjJpD9LSv6M2x_JpT0Hh4M=" alt="Diverse professional cleaning team in an office">
                        <img src="https://media.istockphoto.com/id/1307351651/photo/afro-woman-cleaning-with-her-team.jpg?s=612x612&w=0&k=20&c=LdyP-8BjjnLQ2G-sCmpE69z2w9E4Wf090L0xR4bWxzo=" alt="Cleaning team leader instructing her crew in a modern home">
                        <img src="https://media.istockphoto.com/id/1399042935/photo/portrait-of-a-black-janitor-in-the-office.jpg?s=612x612&w=0&k=20&c=4y45OQ-L5s_g-5b9wA7SGrh9Yy7f8-3MMtO74uJ0m_A=" alt="Professional Black male cleaner with equipment">
                    </div>
                    <button class="carousel-button prev"><i class="fas fa-chevron-left"></i></button>
                    <button class="carousel-button next"><i class="fas fa-chevron-right"></i></button>
                </div>
            </div>
        </section>

        <!-- Testimonials Section -->
        <section id="testimonials" class="testimonials-section">
            <div class="container">
                <h2 class="section-title animate-on-scroll fade-in-up">What Our Clients Say</h2>
                <div class="testimonials-grid">
                     <div class="testimonial-card animate-on-scroll fade-in-up">
                        <p class="testimonial-quote">"KHC transformed our office space. Their professionalism and attention to detail are unmatched. Highly recommended!"</p>
                        <p class="testimonial-author">- Facility Manager, Lagos</p>
                    </div>
                    <div class="testimonial-card animate-on-scroll fade-in-up" style="animation-delay: 0.2s;">
                        <p class="testimonial-quote">"As a busy homeowner, their service is a lifesaver. I got my weekends back and my home has never looked better. Trustworthy team."</p>
                        <p class="testimonial-author">- Adeola J., Homeowner</p>
                    </div>
                    <div class="testimonial-card animate-on-scroll fade-in-up" style="animation-delay: 0.4s;">
                        <p class="testimonial-quote">"The fumigation service was thorough and efficient. The KHC team was professional and explained the process clearly."</p>
                        <p class="testimonial-author">- Hotel Manager, Ikeja</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Trusted Partners Section -->
        <section id="partners" class="partners-section">
            <div class="container">
                <h2 class="section-title animate-on-scroll fade-in-up">Our Trusted Supply Partners</h2>
                <div class="logos-grid animate-on-scroll fade-in-up">
                    <img src="https://i.imgur.com/2s45XyE.png" alt="Robert Scott Logo">
                    <img src="https://i.imgur.com/u15Yg4X.png" alt="Contico Logo">
                    <img src="https://i.imgur.com/BfA2d2m.png" alt="EFG Logo">
                </div>
            </div>
        </section>

        <!-- Contact Section -->
        <section id="contact" class="contact-section">
            <div class="container contact-wrapper">
                <div class="contact-info animate-on-scroll fade-in-up">
                    <h2 class="section-title">Get In Touch</h2>
                    <p>Ready for a cleaner space? Contact us today for a free, no-obligation quote. We’re here to help.</p>
                    <ul>
                        <li><i class="fas fa-phone"></i> +234 123 456 7890</li>
                        <li><i class="fas fa-envelope"></i> info@khcglobalservices.com</li>
                        <li><i class="fas fa-map-marker-alt"></i> Ikeja, Lagos, Nigeria</li>
                    </ul>
                </div>
                <form name="contact" method="POST" data-netlify="true" class="contact-form animate-on-scroll fade-in-up" style="animation-delay: 0.2s;">
                    <input type="hidden" name="form-name" value="contact" />
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="service">Service of Interest</label>
                        <!-- UPDATED: Contact Form Dropdown -->
                        <select id="service" name="service">
                            <option>House Cleaning & Sanitizing</option>
                            <option>Apartment Cleaning & Sanitizing</option>
                            <option>Move In / Move Out Cleaning</option>
                            <option>One-Time Cleaning Service</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea id="message" name="message" rows="4" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Send Message</button>
                </form>
            </div>
        </section>
    </main>
</Layout>
